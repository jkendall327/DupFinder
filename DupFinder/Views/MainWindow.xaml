<Window x:Class="DupFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DupFinder"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10 10 10 10"/>
            <Setter Property="Margin" Value="10 10 10 10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="MinWidth" Value="150" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <StackPanel>
        
        <Label FontSize="40">Duplicate image finder</Label>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="button_FolderPicker" Command="{Binding Path=ChooseDirectoryCommand}">Choose Directory</Button>
            <Label x:Name="label_ChosenFolder">Chosen folder:</Label>
            <Label x:Name="chosenFolder" Content="{Binding Path=SelectedPath}"></Label>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="button_LoadImages" Command="{Binding Path=LoadImagesIntoMemoryCommand}">Load Images</Button>
            <Label x:Name="label_loadedImages" Content="Loaded Images:"></Label>
            <Label x:Name="loadedImages" Content="{Binding Path=LoadedImages}"></Label>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="button_ProcessImages" Content="Process Images" Command="{Binding Path=FindSimilarImagesCommand}"/>
            <Label x:Name="label_processedImages">Processed images:</Label>
            <Label x:Name="processesdImages" Content="{Binding Path=SimilarImages}"></Label>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="button_MoveImages" Content="Move Images" Command="{Binding Path=MoveImagesCommand}"/>
            <Label x:Name="label_movedImages">X images moved (not implemented)</Label>
        </StackPanel>

        <Button Content="Options" Command="{Binding Path=ShowOptionsCommand}"></Button>
    </StackPanel>
</Window>
